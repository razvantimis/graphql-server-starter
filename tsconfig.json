{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2018"
    ],
    "allowJs": true,
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@config": [
        "src/server-config"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "exclude": [
    "build",
    "node_modules"
  ]
}